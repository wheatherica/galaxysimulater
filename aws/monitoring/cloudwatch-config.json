{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "cwagent"
  },
  "metrics": {
    "namespace": "GalaxySimulator",
    "metrics_collected": {
      "cpu": {
        "measurement": [
          {
            "name": "cpu_usage_idle",
            "rename": "CPU_USAGE_IDLE",
            "unit": "Percent"
          },
          {
            "name": "cpu_usage_iowait",
            "rename": "CPU_USAGE_IOWAIT",
            "unit": "Percent"
          },
          "cpu_time_guest"
        ],
        "totalcpu": false,
        "metrics_collection_interval": 60,
        "append_dimensions": {
          "Environment": "${ENVIRONMENT}",
          "Service": "GalaxySimulator"
        }
      },
      "disk": {
        "measurement": [
          {
            "name": "used_percent",
            "rename": "DISK_USED_PERCENT",
            "unit": "Percent"
          },
          {
            "name": "inodes_free",
            "rename": "DISK_INODES_FREE",
            "unit": "Count"
          }
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ],
        "append_dimensions": {
          "Environment": "${ENVIRONMENT}",
          "Service": "GalaxySimulator"
        }
      },
      "diskio": {
        "measurement": [
          {
            "name": "io_time",
            "rename": "diskio_io_time",
            "unit": "Milliseconds"
          },
          {
            "name": "write_bytes",
            "rename": "diskio_write_bytes",
            "unit": "Bytes"
          },
          {
            "name": "read_bytes",
            "rename": "diskio_read_bytes",
            "unit": "Bytes"
          },
          {
            "name": "writes",
            "rename": "diskio_writes",
            "unit": "Count"
          },
          {
            "name": "reads",
            "rename": "diskio_reads",
            "unit": "Count"
          }
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ],
        "append_dimensions": {
          "Environment": "${ENVIRONMENT}",
          "Service": "GalaxySimulator"
        }
      },
      "mem": {
        "measurement": [
          {
            "name": "mem_used_percent",
            "rename": "MEM_USED_PERCENT",
            "unit": "Percent"
          },
          {
            "name": "mem_available",
            "rename": "MEM_AVAILABLE",
            "unit": "Bytes"
          },
          {
            "name": "mem_used",
            "rename": "MEM_USED",
            "unit": "Bytes"
          },
          {
            "name": "mem_total",
            "rename": "MEM_TOTAL",
            "unit": "Bytes"
          }
        ],
        "metrics_collection_interval": 60,
        "append_dimensions": {
          "Environment": "${ENVIRONMENT}",
          "Service": "GalaxySimulator"
        }
      },
      "netstat": {
        "measurement": [
          {
            "name": "tcp_established",
            "rename": "TCP_ESTABLISHED",
            "unit": "Count"
          },
          {
            "name": "tcp_time_wait",
            "rename": "TCP_TIME_WAIT",
            "unit": "Count"
          }
        ],
        "metrics_collection_interval": 60,
        "append_dimensions": {
          "Environment": "${ENVIRONMENT}",
          "Service": "GalaxySimulator"
        }
      },
      "swap": {
        "measurement": [
          {
            "name": "swap_used_percent",
            "rename": "SWAP_USED_PERCENT",
            "unit": "Percent"
          },
          {
            "name": "swap_free",
            "rename": "SWAP_FREE",
            "unit": "Bytes"
          },
          {
            "name": "swap_used",
            "rename": "SWAP_USED",
            "unit": "Bytes"
          }
        ],
        "metrics_collection_interval": 60,
        "append_dimensions": {
          "Environment": "${ENVIRONMENT}",
          "Service": "GalaxySimulator"
        }
      }
    },
    "aggregation_dimensions": [
      ["Environment", "Service"],
      ["Environment", "Service", "InstanceId"]
    ]
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/galaxy-simulator/application.log",
            "log_group_name": "/aws/galaxy-simulator/${ENVIRONMENT}/application",
            "log_stream_name": "{instance_id}/application",
            "retention_in_days": 30,
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/galaxy-simulator/error.log",
            "log_group_name": "/aws/galaxy-simulator/${ENVIRONMENT}/error",
            "log_stream_name": "{instance_id}/error",
            "retention_in_days": 90,
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/galaxy-simulator/performance.log",
            "log_group_name": "/aws/galaxy-simulator/${ENVIRONMENT}/performance",
            "log_stream_name": "{instance_id}/performance",
            "retention_in_days": 7,
            "timezone": "UTC"
          }
        ]
      }
    },
    "log_stream_name": "{instance_id}/cloudwatch",
    "endpoint_override": ""
  },
  "traces": {
    "traces_collected": {
      "xray": {
        "bind_address": "127.0.0.1:2000",
        "tcp_proxy": {
          "bind_address": "127.0.0.1:2000"
        }
      }
    }
  },
  "statsd": {
    "service_address": ":8125",
    "metrics_collection_interval": 60,
    "metrics_aggregation_interval": 300
  }
}